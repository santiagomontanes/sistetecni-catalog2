rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null
        && firestore.exists(/databases/(default)/documents/roles/$(request.auth.uid))
        && firestore.get(/databases/(default)/documents/roles/$(request.auth.uid)).data.role == 'admin'
        && firestore.get(/databases/(default)/documents/roles/$(request.auth.uid)).data.active == true;
    }

    match /products/{productId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
